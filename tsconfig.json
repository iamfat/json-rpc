{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2018",
    "noImplicitAny": false,
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./lib",
    "declarationMap": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
